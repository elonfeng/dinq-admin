server {
    listen 80;
    server_name dinq-admin.example.com;  # Replace with your domain

    # Document root
    root /var/www/dinq-admin/dist;
    index index.html;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript
               application/json application/javascript application/xml+rss
               application/x-font-ttf font/opentype image/svg+xml image/x-icon;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # SPA fallback - serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    # API proxy to Dinq Tools backend
    location /tool/ {
        proxy_pass http://localhost:8081;  # Replace with your backend URL
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;

        # Timeouts for long-running requests
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Static assets caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Favicon
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    # Robots.txt
    location = /robots.txt {
        log_not_found off;
        access_log off;
    }

    # Health check endpoint (optional)
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }

    # Access and error logs
    access_log /var/log/nginx/dinq-admin-access.log;
    error_log /var/log/nginx/dinq-admin-error.log warn;
}

# Configuration notes:
#
# 1. Replace 'dinq-admin.example.com' with your actual domain
# 2. Update '/var/www/dinq-admin/dist' to your build output directory
# 3. Update 'http://localhost:8081' to your Dinq Tools backend URL
# 4. Enable HTTPS for production (uncomment SSL block)
# 5. Adjust proxy timeouts if you have long-running API calls
# 6. Test configuration: sudo nginx -t
# 7. Reload Nginx: sudo systemctl reload nginx
